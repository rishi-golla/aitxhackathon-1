# OSHA Vision - Environment Configuration

# Video Source Configuration
# 0 = Default webcam
# /path/to/video.mp4 = Video file
# rtsp://url = RTSP stream
VIDEO_SOURCE=0

# NVIDIA GPU Configuration
NVIDIA_VISIBLE_DEVICES=all

# Detection Settings
DETECTION_CONFIDENCE=0.3
DETECTION_MODEL=yolov8s-worldv2

# Alert Settings
ALERTS_ENABLED=true
ALERT_COOLDOWN_SECONDS=30

# VLM Settings (requires significant GPU memory)
VLM_ENABLED=false
VLM_MODEL=Qwen/Qwen2.5-VL-7B-Instruct
VLM_QUANTIZATION=4bit

# Dashboard Settings
DASHBOARD_PORT=8501
DASHBOARD_HOST=0.0.0.0

# API Settings
API_PORT=8000
API_HOST=0.0.0.0

# Logging
LOG_LEVEL=INFO
